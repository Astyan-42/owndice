#:kivy 1.9.0

<DicesScreen>:
    fullscreen: True
    BoxLayout:
        orientation: 'vertical'
        TopTitleLayout:
            DiceLabelTitle:
                text: "[color=ff3333]Dices[/color]"
        ScrollViewSpe:
            TopScreenLayout:
				id: inlayout
				default_rows: 5
                rows: 6
                DiceLabel:
                    text: "Dice Model"
                DiceSpinner:
					id: dice_model_spinner
					text: "default"
					on_text: root.change_dice()
				DiceLabel:
					text: "Dice Name"
				DiceTextInput:
					id: dice_name
					text: "default"
				DiceLabel:
					text: "Dice Color"
				DiceTextInput:
					id: dice_color
					text: "FFFFFF"
				DiceLabel:
					text: "Action"
				DiceSpinner:
					id: action
					text: "Add"
					values: ["Add", "Edit", "Delete"]
				
				
				
        DownMenuLayout:
			cols: 2
            DiceButton:
				text: "execute"
				on_press: root.execute()
            DiceButton:
                text: "Menu"
                on_press: root.manager.current = 'menu'
        

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Button:
            text: 'Play'
            font_size: '18sp'
            on_press: root.manager.current = 'play'
        Button:
            text: 'Dices'
            font_size: '18sp'
            on_press: root.manager.current = 'dices'
        Button:
            text: 'Dices Sets'
            font_size: '18sp'
            on_press: root.manager.current = 'dicessets'
