#:kivy 1.9.0

<DicePopup>:
    title_size: "18sp"
    title_align: "center"

<ErrorPopup>:
    id: popup
    title: "Error"
    title_color: [1, 0, 0, 1]
    size_hint_x: 0.8
    size_hint_y: 0.8
    BoxLayout:
        orientation: 'vertical'
        ScrollViewSpe:
            TopPopupLayout:
                cols: 1
                rows: 1
                AboutLabel:
                    id: errormessage
        DownMenuLayout:
			cols: 1
            CloseButton:
                on_press: popup.dismiss()


<DicesSetsScreen>:
    fullscreen: True
    BoxLayout:
        orientation: 'vertical'
        TopTitleLayout:
            DiceLabelTitle:
                text: "[color=ff3333]Dice Sets[/color]"
        ScrollViewSpe:
            TopScreenLayout:
				id: inlayout
				default_rows: 3
                rows: 5
                DiceLabel:
                    text: "DiceSet Model"
                DiceSpinner:
					id: diceset_model_spinner
					text: "default"
					on_text: root.change_diceset()
				DiceLabel:
					text: "DiceSet Name"
				DiceTextInput:
					id: diceset_name
					text: "default"
				DiceLabel:
					text: "Action"
				DiceSpinner:
					id: action
					text: "Add"
					values: ["Add", "Edit", "Delete"]
		DownMenuLayout:
			cols: 2
			DiceButton:
				text: "Execute"
				on_press: root.execute()
			DiceButton:
				text: "Menu"
				on_press: root.manager.current = 'menu'
					
<DicesScreen>:
    fullscreen: True
    BoxLayout:
        orientation: 'vertical'
        TopTitleLayout:
            DiceLabelTitle:
                text: "[color=ff3333]Dices[/color]"
        ScrollViewSpe:
            TopScreenLayout:
				id: inlayout
				default_rows: 4
                rows: 6
                DiceLabel:
                    text: "Dice Model"
                DiceSpinner:
					id: dice_model_spinner
					text: "default"
					on_text: root.change_dice()
				DiceLabel:
					text: "Dice Name"
				DiceTextInput:
					id: dice_name
					text: "default"
				DiceLabel:
					text: "Dice Color"
				DiceTextInput:
					id: dice_color
					text: "FFFFFF"
				DiceLabel:
					text: "Action"
				DiceSpinner:
					id: action
					text: "Add"
					values: ["Add", "Edit", "Delete"]
        DownMenuLayout:
			cols: 2
            DiceButton:
				text: "Execute"
				on_press: root.execute()
            DiceButton:
                text: "Menu"
                on_press: root.manager.current = 'menu'
        
<PlayDiceSet>
	fullscreen: True
    BoxLayout:
        orientation: 'vertical'
        TopTitleLayout:
            DiceLabelTitle:
                text: "[color=ff3333]Play[/color]"
        ScrollViewSpe:
            TopScreenLayout:
				id: inlayout
				default_rows: 1
                rows: 1
                DiceLabel:
                    text: "Dice Set"
                DiceSpinner:
					id: diceset_spinner
					text: "default"
        DownMenuLayout:
			cols: 2
            DiceButton:
				text: "Roll"
				on_press: root.roll()
			DiceButton:
                text: "Menu"
                on_press: root.manager.current = 'menu'




<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Button:
            text: 'Play'
            font_size: '18sp'
            on_press: root.manager.current = 'play'
        Button:
            text: 'Dices'
            font_size: '18sp'
            on_press: root.manager.current = 'dices'
        Button:
            text: 'Dices Sets'
            font_size: '18sp'
            on_press: root.manager.current = 'dicessets'
