#:kivy 1.9.0

<DicesScreen>:
    fullscreen: True
    BoxLayout:
        orientation: 'vertical'
        

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Button:
            text: 'Play'
            font_size: '18sp'
            on_press: root.manager.current = 'play'
        Button:
            text: 'Dices'
            font_size: '18sp'
            on_press: root.manager.current = 'dices'
        Button:
            text: 'Dices Sets'
            font_size: '18sp'
            on_press: root.manager.current = 'dicessets'
